# Environment Variables for Production-Ready Auth + Sessions

# MongoDB Atlas
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net
MONGODB_DB_NAME=rollmetric

# Auth & JWT
JWT_SECRET=your-long-random-jwt-secret-change-in-production
JWT_REFRESH_SECRET=your-long-random-refresh-secret-change-in-production
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=30d
EMAIL_TOKEN_TTL=24h

# Cookies
COOKIE_NAME_REFRESH=rm_refresh
SECURE_COOKIES=true
# Cookie domain will be set to match the request origin for flexibility

# Email (Resend)
RESEND_API_KEY=re_XXXXXXXXXXXXXXXXXXXXXXXX
EMAIL_FROM=no-reply@rollmetric.com

# Public URLs
NEXT_PUBLIC_BASE_URL=https://rollmetric.com
# CORS: Allow production domain and common dev origins
CORS_ALLOWED_ORIGINS=https://rollmetric.com,https://staging.rollmetric.com,http://localhost:3000,https://localhost:3000

# Environment
NODE_ENV=production

# Optional Monitoring
SENTRY_DSN=
REDIS_URL=