# Environment Configuration Template
# Copy this file to .env.local and modify the values as needed

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================

# Application Details
NEXT_PUBLIC_APP_NAME="MediaPipe Pose Demo"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# Environment
NODE_ENV=development

# Development Port (optional)
PORT=3000

# Debug Mode (optional)
DEBUG=false
NEXT_PUBLIC_DEBUG=false

# ==============================================
# AUTHENTICATION (Required for production)
# ==============================================

# NextAuth Secret - Generate a strong random string
# You can use: openssl rand -base64 32
NEXTAUTH_SECRET=your-super-secret-key-here-replace-with-random-string

# NextAuth URL - Set to your domain in production
NEXTAUTH_URL=http://localhost:3000

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# Choose ONE of the following database options:

# Option 1: PostgreSQL with Prisma
# DATABASE_URL="postgresql://username:password@localhost:5432/mediaposedb"

# Option 2: MongoDB
# MONGODB_URI="mongodb://localhost:27017/mediaposedb"
# For MongoDB Atlas:
# MONGODB_URI="mongodb+srv://username:password@cluster.mongodb.net/mediaposedb"

# Option 3: Supabase (Recommended for quick setup)
# NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
# NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"

# ==============================================
# ANALYTICS AND MONITORING (Optional)
# ==============================================

# Google Analytics
# NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"
# NEXT_PUBLIC_ANALYTICS_ENABLED=true

# Sentry Error Tracking
# SENTRY_DSN="https://your-sentry-dsn"

# ==============================================
# SECURITY CONFIGURATION (Production)
# ==============================================

# JWT Settings
# JWT_SECRET="your-jwt-secret-32-characters-minimum"
# JWT_EXPIRES_IN="7d"

# CORS Settings (if needed for API routes)
# CORS_ORIGIN="https://your-domain.com"

# Rate Limiting (if implemented)
# RATE_LIMIT_MAX=100
# RATE_LIMIT_WINDOW_MS=900000

# ==============================================
# EXTERNAL SERVICES (Optional)
# ==============================================

# Email Service (for notifications)
# EMAIL_FROM="noreply@your-domain.com"
# EMAIL_SERVER_HOST="smtp.your-provider.com"
# EMAIL_SERVER_PORT=587
# EMAIL_SERVER_USER="your-email@your-domain.com"
# EMAIL_SERVER_PASSWORD="your-email-password"

# Cloud Storage (for pose session recordings)
# AWS_ACCESS_KEY_ID="your-aws-access-key"
# AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
# AWS_REGION="us-east-1"
# AWS_S3_BUCKET="your-s3-bucket"

# ==============================================
# FEATURE FLAGS (Optional)
# ==============================================

# Enable/disable features
# NEXT_PUBLIC_ENABLE_ANALYTICS=true
# NEXT_PUBLIC_ENABLE_ERROR_TRACKING=true
# NEXT_PUBLIC_ENABLE_SESSION_RECORDING=false
# NEXT_PUBLIC_MAX_SESSION_DURATION=1800000